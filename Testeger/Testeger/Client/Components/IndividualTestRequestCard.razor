
@inject TestRequestService TestRequestService


<div class="col-md-4  col-sm-4 col-6 my-2 my-2">
    <div class="card h-100 shadow-sm" style="height: 150px;">
        <div class="card-body d-flex flex-column justify-content-between" style="height: 150px;">
            <div>
                <h5 class="card-title">@Request.Title</h5>
                <p class="card-text"><small class="text-muted">Priority: @Request.PriorityLevel</small></p
                    <p class="card-text"><small class="text-muted">Created: @DateOnly.FromDateTime(Request.CreatedDate)</small></p>
                <div class="d-flex align-items-center">
                    <RadzenIcon Icon="person" class="me-2" />
                    <p class="card-text mb-0"><small class="text-muted">Lucas</small></p>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                    <RadzenButton Click="OpenTestRequest" Icon="more_vert" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.ExtraSmall" /> 
            </div>
        </div>
    </div>
</div>

@code {
    [Inject]
    protected DialogService DialogService { get; set; }

    [Parameter]
    public TestRequest? Request { get; set; }

    public async Task OpenTestRequest()
    {
        var teste = Request.Id;
        await DialogService.OpenAsync<DialogTestRequestPage>($"Request {teste}",
               new Dictionary<string, object>() { { "RequestId", teste } },
               new DialogOptions() { Width = "700px", Height = "512px", Resizable = false, Draggable = true });
               Console.WriteLine("Order Dialog Opened");
    }
}
