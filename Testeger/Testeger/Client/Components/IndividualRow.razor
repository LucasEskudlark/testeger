<div class="row">
    <div class="col-12 px-0 mx-0">
        <div class="d-flex align-items-center px-2 pt-1 card" style="min-width: 900px;">
            @RowTitle
        </div>
        <div class="row my-2" style="min-width: 900px;">
            <IndividualDataList
                Requests="Requests"
                Status="Status" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<TestRequest>? Requests { get; set; }

    [Parameter]
    public RenderFragment? RowTitle { get; set; }

    [Parameter]
    public RequestStatus Status { get; set; }
}

<style>
    .row-title {
        background-color: #E9EAED !important;
        color: #4F4F50;
    }
</style>