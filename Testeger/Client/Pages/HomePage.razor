@page "/home"
@layout DefaultLayout
@inject TestRequestService TestRequestService
@inject DialogService DialogService

<PageTitle>Index</PageTitle>

<div class="container">
    <div class="row p-0 pb-0 pe-lg-0 pt-lg-0 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1 text-body-emphasis">Create and manage test requests with Testeger</h1>
            <p class="lead">Experience advanced test management with Testeger: Effortlessly create, manage, and track test requests to ensure high-quality results and effective collaboration.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                <RadzenButton Text="Create Project" Size="ButtonSize.Large" ButtonStyle="ButtonStyle.Primary" Click="OpenProjectCreationDialog"></RadzenButton>
            </div>
        </div>
        <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
            <img class="rounded-lg-3" src="images/testeger.colored-background.png" alt="" width="720">
        </div>
    </div>
</div>

@code {
    private async Task OpenProjectCreationDialog()
    {
        await DialogService.OpenAsync<ProjectCreationDialog>(
            "Create Project",
            null,
            new DialogOptions() { Width = "700px", Height = "540px", Resizable = false, Draggable = true }
        );
    }
}
