@using Testeger.Client.ViewModels.TestRequests
<div class="row card mt-3 shadow-sm" style="min-width: 900px;">
    <div class="col-12 px-0 mx-0">
        <div class="card-header row-titlebar d-flex justify-content-start align-items-center ps-2 px-0" style="min-width: 900px; height: 35px;">
            @RowTitle
        </div>
        @if (Requests.Any())
        {
            <div class="card-body my-2 mt-2" style="min-width: 900px;">

                <TestRequestsDataList Requests="Requests"
                                    Status="Status" />

            </div>
        } else
        {
            <div class="card-body my-2 d-flex justify-content-center align-items-center" style="min-width: 900px; height: 50px;">
                <div>
                    <small class="d-flex justify-content-center align-items-center" style="color: #A9ABAE;"><i>No existing requests for this status yet.</i></small>
                </div> 
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public IEnumerable<TestRequestViewModel>? Requests { get; set; }

    [Parameter]
    public RenderFragment? RowTitle { get; set; }

    [Parameter]
    public RequestStatus Status { get; set; }

}