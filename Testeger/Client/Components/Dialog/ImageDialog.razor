@page "/{TestCaseResultId}/image/{ImageId}"
@inject DialogService DialogService
@inject IConfiguration Configuration

@attribute [Authorize]

@if (ImageUrl is not null)
{
    <div id="img-div" class="d-flex justify-content-center align-items-center">
        <img id="dialog-img" src="@BaseAddress/api/images/@ImageUrl" class="full-image" />
    </div>
}

@code {
    [Parameter]
    public required string ImageUrl { get; set; }

    [Parameter]
    public required string ImageId { get; set; }

    [Parameter]
    public required string TestCaseResultId { get; set; }

    private string? BaseAddress;

    protected override void OnInitialized()
    {
        BaseAddress = Configuration["ApiSettings:BaseAddress"];
    }
}

<style>
    #dialog-img {
        display: block;
        max-width: 900px;
        max-height: 620px;
        min-width: 450px;
        min-height: 340px;
        width: auto;
        height: auto;
    }

    #img-div {
        idth: 900px;
        height: 620px;
    }
</style>