@page "/{TestCaseResultId}/image/{ImageId}"
@inject DialogService DialogService

@if (ImageUrl is not null)
{
    <div id="dialog-img" class="d-flex justify-content-center align-items-center">
        <img src="https://localhost:5000/api/images/@ImageUrl" class="full-image" />
    </div>
}

@code {
    [Parameter]
    public required string ImageUrl { get; set; }

    [Parameter]
    public required string ImageId { get; set; }

    [Parameter]
    public required string TestCaseResultId { get; set; }
}

<style>
    #dialog-img {
        display: block;
        max-width: 900px;
        max-height: 680px;
        width: auto;
        height: auto;
    }
</style>